<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/current_day"
    >
    <io.karim.MaterialTabs
        android:id="@+id/material_tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/primary"
        app:mtSameWeightTabs="true"
        app:mtPaddingMiddle="false"
        app:mtIndicatorColor="@color/accent"
        app:mtIndicatorHeight="3dp"
        app:mtTextAllCaps="true"
        app:mtMrlRippleColor="@color/accent"
        app:mtMrlRippleHighlightColor="@color/accent"
        app:mtMrlRippleAlpha="0.1"
        app:mtMrlRippleDuration="5"
        app:mtMrlRippleDelayClick="false"
        app:mtMrlRippleDiameter="50dp"
        app:mtMrlRippleFadeDuration="10"
        app:mtMrlRippleOverlay="true"
        app:mtMrlRipplePersistent="false"
        app:mtMrlRippleRoundedCorners="11dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".MainActivity" />

</LinearLayout>
