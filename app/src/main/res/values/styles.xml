<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="TextViewStyle">
       <item name="android:textSize">20dp</item>
       <item name="android:paddingBottom">3dp</item> 
       <item name="android:textColor">#ffffff</item>
       <item name="android:layout_width">fill_parent</item>
     <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="grid_style">
        <item name="android:numColumns">7</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>
    
    <style name="header_style">
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/film_day</item>
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
