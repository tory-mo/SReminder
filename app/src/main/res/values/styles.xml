<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TextViewStyle">
       <item name="android:textSize">20dp</item>
       <item name="android:paddingBottom">3dp</item> 
       <item name="android:textColor">#ffffff</item>
       <item name="android:layout_width">fill_parent</item>
     <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="grid_style">
        <item name="android:numColumns">7</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>
    
    <style name="header_style">
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="popupTheme">@style/PopupMenuStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonWhiteCheck</item>

    </style>

    <style name="RadioButtonWhiteCheck" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="RadioButtonBlackCheck" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@color/accent</item>
    </style>

    <style name="PopupMenuStyle" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!--<style name="SettingsTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">-->
        <!--<item name="android:colorPrimary">@color/primary</item>-->
        <!--<item name="android:colorPrimaryDark">@color/primary_dark</item>-->
    <!--</style>-->

    <style name="SettingsTheme" parent="Theme.AppCompat.Light">
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="popupTheme">@style/PopupMenuStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonWhiteCheck</item>

    </style>

</resources>
