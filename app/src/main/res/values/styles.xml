<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.SReminder</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBar.Solid.SReminder</item>

        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/light_bg</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="popupTheme">@style/PopupMenuStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonWhiteCheck</item>
    </style>

    <style name="RadioButtonWhiteCheck" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="PopupMenuStyle" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="OverviewTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="grid_cell_style" parent="OverviewTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:width">40dp</item>
        <item name="android:height">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="grid_style">
        <item name="android:numColumns">7</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="header_style"  parent="OverviewTextViewStyle">
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="ActionBar.Solid.SReminder" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="android:background">@color/primary</item>
        <!-- Support library compatibility -->
        <item name="background">@color/primary</item>
    </style>

    <style name="Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/transparent</item>
        <!-- Support library compatibility -->
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <!-- Support library compatibility -->
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Theme.TranslucentActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/Widget.ActionBar</item>
    </style>

    <style name="Theme.TranslucentActionBar.ActionBar" />

    <style name="Theme.TranslucentActionBar.ActionBar.Overlay">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/light_bg</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="chkBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/accent</item>
    </style>

</resources>
